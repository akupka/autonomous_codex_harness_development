# Beispiel-Konfiguration für KLEINE Projekte
# Kopiere diese Datei nach harness.conf und passe sie an

# ============================================
# Test & Feature Management
# ============================================

# Bei kleinen Projekten reichen 20-50 Tests
test_case_limit=30

# ============================================
# Codex / LLM Settings
# ============================================

codex_model=

# Prompt-Dateien
cycle_prompt_file=coding_prompt.md
init_prompt_file=init_prompt.md

# ============================================
# Context Building
# ============================================

# Kleinere Limits für schnellere Cycles
max_files=100
max_file_bytes=100000
max_git_log_lines=20

# ============================================
# Loop Settings
# ============================================

# Kürzere Pausen für schnellere Iteration
sleep_secs=1

# Weniger Iterationen bei kleinen Projekten
max_iterations=100

# Mehr Fehler-Toleranz in der Entwicklung
max_errors=10

# Kürzerer Timeout (15 Min)
cycle_timeout=900

# ============================================
# Git Integration
# ============================================

# Kein Auto-Push während Entwicklung
push_each_cycle=0

git_remote=origin
git_branch=

# ============================================
# Logging
# ============================================

log_dir=logs
log_level=INFO
